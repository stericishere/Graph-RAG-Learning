# Graph Database MCP Server Environment Configuration

# Database Configuration
# Choose one: "neo4j" or "networkx"
GRAPH_DB_TYPE=networkx

# Neo4j Configuration (if using Neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# NetworkX Configuration (if using NetworkX)
NETWORKX_DATA_FILE=data/graph_data.json

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/mcp-server.log

# Development Settings
DEBUG=False
ENVIRONMENT=development

# Optional: Database Connection Settings
DATABASE_TIMEOUT=30
MAX_CONNECTION_POOL_SIZE=10

# Optional: Performance Settings  
ENABLE_CACHING=True
CACHE_TTL=3600 